<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!-- Use property substitution for timezone, which will be set in code -->
    <property name="TIMEZONE" value="${timezone:-UTC}"/>

    <!-- Define the file appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Include timezone in the log pattern -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS z} %level:%logger: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root logger level to INFO and attach appenders -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Configure the timezone correctly -->
    <timestamp key="timestamp" datePattern="yyyy-MM-dd HH:mm:ss,SSS" timeReference="${TIMEZONE}"/>
</configuration>
